<style>
  /* 폰트 : 인천교육자람체 */
  @font-face {
    font-family: "iceJaram-Rg";
    src: url("https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2307-2@1.0/iceJaram-Rg.woff2")
      format("woff2");
    font-weight: normal;
    font-style: normal;
  }
  /* 폰트 : 프리텐다드 */
  @import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable.min.css");

  body {
    /* overflow-y: overlay; 해야 스크롤바가 공간을 차지 안함. */
    overflow-y: overlay;
    background-size: cover;
    background-color: #fefff7;
    /* 스크롤이 디폴트로 있도록 설정 */
    overflow: scroll;
  }

  /* 홈페이지 좌우 여백 조절하는 곳 */
  .cover-container {
    max-width: 72em;
  }

  /*
  스크롤바 설정 : 콘텐츠 안에 스크롤바가 들어가게 설정
  */

  /* 스크롤바 스타일링 */
  ::-webkit-scrollbar {
    width: 14px;
    height: 14px;
  }

  /* 스크롤바 막대 스타일링 */
  ::-webkit-scrollbar-thumb {
    outline: none;
    border-radius: 10px;
    border: 4px solid transparent;
    box-shadow: inset 6px 6px 0 rgba(255, 235, 129);
  }

  /* 스크롤바 막대 스타일링 : 호버시 */
  /* ::-webkit-scrollbar-thumb:hover {
      border: 4px solid transparent;
      box-shadow: inset 6px 6px 0 rgba(34, 34, 34, 0.3);
    } */

  /* 스크롤바 영역 뒷배경 */
  ::-webkit-scrollbar-track {
    box-shadow: none;
    background-color: transparent;
  }

  /*
     * Header
     */

  .cover-container .d-flex .w-100 .h-100 .p-3 .mx-auto .flex-column {
    text-align: center;
  }

  /* 헤더 메뉴 폰트&사이즈 (굵기는 아래 html에서 fw-값을 바꿔야함.) */
  nav {
    font-family: "Pretendard";
    font-size: 18px;
  }

  /* 헤더 로고 */
  .navbar-brand {
    width: 100px;
    height: 100px;
  }


  /* 헤더 드롭다운 버튼 */
  .btnHeader {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  width: 2.5rem; /* 프로필과 동일한 크기 */
  height: 2.5rem;
  border-radius: 50%;
  overflow: hidden;
}

/* 드롭다운 화살표 제거 */
.dropdown-toggle::after {
    display: none;
  }

/* 헤더 프로필 */
.headerProfile {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 드롭다운 색깔 */
.dropdown-menu.show 
{
border-style: none;
background-color: #fefff7;
box-shadow: 0 5px 10px 0 rgba(138, 155, 165, 0.2);
}

.dropdown-item{
  color:#818181;
}

/* 드롭다운 메뉴 호버시 */
.dropdown-menu > li > a:hover {
  background-image: none;
  background-color: #fefff7;
  color: #95c3de;
}
 
  .nav-masthead .nav-link {
    color: #6a6a6a;
    border-bottom: 0.25rem solid transparent;
  }

  .nav-masthead .nav-link:hover,
  .nav-masthead .nav-link:focus {
    color: #95c3de;
  }

  .nav-masthead .nav-link + .nav-link {
    margin-left: 1rem;
  }

</style>
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-0">
    <div>
      <a class="navbar-brand float-md-start mb-0" href="/">
        <img src="/static/img/SeSACitLogo.svg" />
      </a>
      <!-- <a href="/">
        <h3 class="logo float-md-start mb-0">SeSAC-it</h3>
      </a> -->
      <nav class="nav nav-masthead d-flex align-items-center justify-content-center float-md-end">
        <div class="container"></div>
        <% if (isAuthenticated) { %>
        <!-- 로그인 상태일 때의 메뉴 -->
        <a class="nav-link fw-normal py-1 px-0" href="/mapMain">맛집 지도</a>
        <a class="nav-link fw-normal py-1 px-0" href="/boardMain">게시판</a>
        <a class="nav-link fw-normal py-1 px-0" href="/comment">댓글</a>
        <!-- <a class="nav-link fw-normal py-1 px-0" href="/mypage">내 프로필</a> -->
        <!-- <a class="nav-link fw-normal py-1 px-0" href="/logout">로그아웃</a> -->
        <div class="nav-link fw-normal py-1 px-0 dropdown">
          <button class="btn btnHeader" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <% if (user.image) { %>
              <!-- 사용자 프로필이 있는 경우 -->
              <img src="/<%= user.image %>" alt="프로필 이미지" class="headerProfile" />
            <% } else { %>
              <!-- 사용자 프로필이 없는 경우 -->
              <img src="/static/img/bagicimg.jpeg" alt="사용자 메뉴" class="headerProfile" id="randomImage" />
            <% } %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/mypage">마이페이지</a></li>
            <li><a class="dropdown-item" href="/logout">로그아웃</a></li>
          </ul>
        <% } else { %>
        <!-- 로그아웃 상태일 때의 메뉴 -->
        <a class="nav-link fw-normal py-1 px-0" href="/mapMain">맛집 지도</a>
        <a class="nav-link fw-normal py-1 px-0" href="/boardMain">게시판</a>
        <a class="nav-link fw-normal py-1 px-0" href="/signin">로그인</a>
        <a class="nav-link fw-normal py-1 px-0" href="/comment">댓글</a>
        <% } %>
      </nav>
    </div>
  </header>
</div>
