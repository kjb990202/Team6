<!DOCTYPE html>
<html lang="ko" class="h-100" data-bs-theme="auto">
  <head>
    <!-- CDN들 불러오기 -->
    <%- include('../components/cdn.ejs') %>
    <!-- CSS 연결 -->
    <link href="../static/css/mypage.css" rel="stylesheet" />
    <title>SeSAC-it : 마이페이지</title>
  </head>

  <!-- 헤더 : 상단 메뉴바  -->
  <body class="d-flex h-100 text-center text-bg-white">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="container">
      <div><%- include('../components/header.ejs') %></div>
    </header>
      <main>
        <!-- 사용자 프로필 -->
        <div class="container">
          <div class="gradient-custom-2">
            <div class="container pt-5 h-100">
              <div class="row">
                <div class="formbg col col-lg-9 col-xl-7">
                  <div
                    class="mypageHeader d-flex flex-row padding-horizontal--24">
                    <div class="imageBox">
                      <!-- 유저의 이미지가 없다면 기본이미지로 표현 유저가 이미지를 업로드하면 대표이미지로 표현 -->
                      <% if (user.image) { %>
                      <img
                        src="<%= user.image %>"
                        alt="User Profile Image"
                        class="img-fluid img-thumbnail"
                        style="width: 100%; height: 100%; z-index: 1"/>
                      <% } else { %>
                      <img
                        src="/static/img/bagicimg.jpeg"
                        alt="Default Image"
                        class="img-fluid img-thumbnail"
                        style="width: 100%; height: 100%; z-index: 1"/>
                      <% } %>
                    </div>
                    <div class="d-flex flex-column text-start justify-content-center padding-left--32">
                      <div class="padding-top--32">
                        <!-- 로그인 시 nickname 값을 가져와서 표시 -->
                        <% if (isAuthenticated) { %>
                        <h5 class="name"><%= user.nickname %>님</h5>
                        <% } %>
                      </div>
                      <!-- DB에서 아래 숫자 데이터 추출 필요 (index.js)-->
                      <div class = "d-flex flex-row">
                      <div>
                        <p class="mb-1 h5">
                          <% if (isAuthenticated) { %>
                          <%= Map_DatabaseCount %>
                          <% } %>
                        </p>
                        <p class="small text-muted mb-0">리뷰수</p>
                      </div>
                      <div class="px-3">
                        <p class="mb-1 h5">
                          <% if (isAuthenticated) { %>
                          <%= boardCount %>
                          <% } %>
                        </p>
                        <p class="small text-muted mb-0">게시글수</p>
                      </div>
                      <div>
                        <p class="mb-1 h5">
                          <% if (isAuthenticated) { %>
                          <%= commentCount %>
                          <% } %>
                        </p>
                        <p class="small text-muted mb-0">댓글수</p>
                      </div>
                    </div>
                    </div>
                  </div>
                  <!-- 버튼들 들어있는 박스 -->
                    <div class="padding-bottom--16 padding-left--16 padding-right--16 d-flex justify-content-start">
                    <div class="p-2 field padding-bottom--10">
                      <input
                        class="p-2 login-button btn btn-primary"
                        type="button"
                        id="nicknameChangeButton"
                        value="닉네임 변경"
                        data-toggle="modal"
                        data-target="#profileModal"/>
                    </div>
                    <div class="p-2 field padding-bottom--10">
                      <input
                        class="login-button"
                        type="file"
                        id="file"
                        name="image"
                        style="display: none"/>
                      <input
                        type="button"
                        name="image"
                        class="p-2 btn btn-primary"
                        value="사진 변경"
                        onclick="document.getElementById('file').click()"/>
                    </div>
                    <div class="ms-auto p-2 field padding-bottom--10">
                      <input
                        class="login-button btn btn-danger"
                        name="delete"
                        type="button"
                        id="accountDeleteButton"
                        value="회원 탈퇴"
                        data-toggle="modal"
                        data-target="#profileModal"/>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- 모달 -->
        <div
          class="modal fade"
          id="profileModal"
          tabindex="-1"
          role="dialog"
          aria-labelledby="profileModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content modal-dialog">
              <div class="modal-header">
                <button
                  type="button"
                  class="close"
                  name="delete"
                  data-dismiss="modal"
                  aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
                <div class="modal-header d-flex flex-row justify-content-evenly">
                <div class="tabs active" id="tab01">
                  <h6 class="font-weight-bold">닉네임 변경</h6>
                </div>   
                <div class="tabs" id="tab02">
                  <h6 class="text-muted">회원 탈퇴</h6>
                </div>
              </div>
              <div class="line"></div>
              <!-- 모달 : 닉네임 변경 창 -->
              <fieldset class="show" id="tab011">
                <div
                  class="formbg-inner padding-right--32 padding-left--32 padding-top--24">
                  <form name="nicknameForm">
                    <div class="field padding-bottom--24">
                      <div class="grid--50-50">
                        <label
                          class="d-flex justify-content-start"
                          for="userNickname"
                          >닉네임</label>
                      </div>
                      <div class="d-flex padding-bottom--10">
                        <input
                          type="text"
                          class="flex-grow-1 login-input"
                          name="nickname"
                          required/>
                        <input
                          type="button"
                          class="doubleCheck btn btn-primary"
                          name="submit"
                          value="중복확인"
                          onclick="checkNickname();"/>
                      </div>
                    </div>
                    <div class="field padding-bottom--10">
                      <div class="d-flex padding-bottom--10">
                        <input
                          class="btn btn-danger"
                          type="button"
                          name="delete"
                          value="취소"
                          data-dismiss="modal"/>
                        <input
                        class="btn btn-primary"
                          type="button"
                          name="save"
                          value="저장"
                          onclick="updateMypageNickname()"/>
                      </div>
                    </div>
                  </form>
                </div>
              </fieldset>
              <fieldset id="tab021">
                <div
                class="formbg-inner padding-right--32 padding-left--32 padding-top--24">
                  <form name="deleteAccountForm">
                    <div class="field padding-bottom--24">
                      <div class="grid--50-50">
                        <label
                          class="d-flex justify-content-start"
                          for="userNickname">탈퇴를 위해 비밀번호를 다시 입력해주세요.</label>
                      </div>
                      <div class="padding-bottom--10">
                      <input
                        type="password"
                        id="accountDeletePassword"
                        class="form-control"/>
                    </div>
                  </div>
                    <div class="field padding-bottom--10">
                      <div class="d-flex padding-bottom--10">
                        <input
                          class="btn btn-danger"
                          type="button"
                          name="delete"
                          value="취소"
                          data-dismiss="modal"
                        />
                        <input
                        class="btn btn-primary"
                          type="button"
                          data-dismiss="modal"
                          value="탈퇴"
                          onclick="deleteAccount()"
                        />
                      </div>
                    </div>
                  </form>
                </div>
              </fieldset>
            </div>
          </div>
        </div>
      </main>
    </body>     
  <script>
        // file이란 요소에 이벤트 리스너 추가 파일이 업로드시 함수실행
        document.getElementById('file').addEventListener('change', function() {
          // 사용자가 파일 업로드시 새로운 객체 생성
          const formData = new FormData();
          // 'image'라는 키와 함께 사용자가 선택한 파일(this.files[0])을 formData에 추가합니다.
          formData.append('image', this.files[0]);

          fetch('/upload', {
              method: 'POST',
              body: formData
          })
          .then(response => response.json())// 서버로부터 받은 응답을 JSON 형태로 파싱합니다.
          .then(data => {
              if (data.success) {
                  location.reload();
              } else {
                  alert('파일 업로드에 실패했습니다.');
              }
          })
          .catch(error => {
              console.error('Error:', error);
          });
        });
        // 중복확인을 위한 false로 변수설정
        let nicknameChecked = false;
        // 닉네임 중복확인
        function checkNickname() {
              let nickname = document.forms["nicknameForm"].nickname.value;
              // 중복확인 유효성 검사
              if (!nickname) {
                  alert("닉네임을 입력해주세요.");
                  return;
              }

              axios({
                  method: "post",
                  url: "/checknickname",
                  data: { nickname: nickname }
              }).then((res) => {
                // duplicate는 중복이란 영어 서버로 부터 받는 응답 데이터
                  if (res.data.duplicate) {
                      alert("이미 사용 중인 닉네임입니다.");
                      nicknameChecked = false;
                  } else {
                      alert("사용 가능한 닉네임입니다.");
                      nicknameChecked = true;
                  }
              });
            }
                // 마이페이지 닉네임 변경
                function updateMypageNickname() {
              // 중복확인 유효성 검사
              if (!nicknameChecked) {
                  alert("중복확인을 먼저 해주세요.");
                  return;
              }

              const form = document.forms["nicknameForm"];
              const nickname = form.nickname.value;

              let user = {
                  id: '<%= user.id %>',
                  nickname: form.nickname.value
              };
              //닉네임 변경 요청
              axios({
                  method: 'post',
                  url: '/updateMypageNickname',
                  data: user
              }).then((res) => {
                  if (res.data.result) {
                      alert(res.data.message);
                      location.reload();
                  } else {
                      alert(res.data.message);
                  }
              });
              $('#profileModal').modal('hide');
            }
            
      function deleteAccount() {
        const userid = '<%= user.id %>'; // EJS를 이용하여 서버에서 받은 사용자 ID를 가져옴
        const password = document.getElementById("accountDeletePassword").value; // 비밀번호 입력 필드에서 값 가져오기

        // 비밀번호 유효성 검사
        if (!password) {
          alert('비밀번호를 입력해주세요.');
          return;
        }

        // 회원 탈퇴 요청
        axios({
          method: 'post',
          url: '/deleteAccount',
          data: { id: userid, password: password }
        }).then((res) => {
          if (res.data.result) {
            // 회원 탈퇴 성공 시 로그인 페이지로 이동
            alert('이용해주셔서 감사합니다.');
            window.location.href = "/signin";
          } else {
            alert(res.data.message);
          }
        }).catch((error) => {
          console.error(error);
        });

        $('#profileModal').modal('hide'); // 모달 창 닫기
      }

      function hideAllSections() {
        document.querySelectorAll('.sectionContent').forEach((section) => {
          section.style.display = 'none';
        });
      }


    // 추가적인 링크들도 동일한 방식으로 설정

    // 모달창 탭 작동
    $(document).ready(function () {
      $(".tabs").click(function () {
        $(".tabs").removeClass("active");
        $(".tabs h6").removeClass("font-weight-bold");
        $(".tabs h6").addClass("text-muted");
        $(this).children("h6").removeClass("text-muted");
        $(this).children("h6").addClass("font-weight-bold");
        $(this).addClass("active");
        current_fs = $(".active");
        next_fs = $(this).attr("id");
        next_fs = "#" + next_fs + "1";
        $("fieldset").removeClass("show");
        $(next_fs).addClass("show");

        current_fs.animate(
          {},
          {
            step: function () {
              current_fs.css({
                display: "none",
                position: "relative",
              });
              next_fs.css({
                display: "block",
              });
            },
          }
        );
      });
    });

// 닉네임 변경 버튼에 첫번째 모달탭 띄우는 이벤트
document.getElementById("nicknameChangeButton").addEventListener("click", function(){
  showTab("tab01");
})

// 회원 탈퇴 버튼에 두번째 모달탭 띄우는 이벤트
document.getElementById("accountDeleteButton").addEventListener("click", function(){
  showTab("tab02");
})

function showTab(tabId) {
  $(".tabs").removeClass("active").removeClass("font-weight-bold").addClass("text-muted");
  $("#"+tabId).addClass("active").removeClass("text-muted").addClass("font-weight-bold");
  $("fieldset").removeClass("show");
  $("#"+tabId + "1").addClass("show");
}
</script>
</html>