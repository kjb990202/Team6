    <script>
        // 각 섹션의 내용을 숨기는 함수
function hideAllSections() {
  document.querySelectorAll('.sectionContent').forEach((section) => {
    section.style.display = 'none';
  });
}

// 특정 섹션만 표시하는 함수
function showSection(sectionId) {
  hideAllSections();
  document.querySelector(sectionId).style.display = 'block';
}

// 페이지가 로드될 때 모든 섹션을 숨기고, 첫 번째 섹션(리뷰)만 표시
window.onload = () => {
  hideAllSections();
  showSection('#reviewsSection');
};

// 각 링크에 이벤트 리스너 추가
document.querySelector('#reviewsLink').addEventListener('click', () => {
  showSection('#reviewsSection');
});

document.querySelector('#postsLink').addEventListener('click', () => {
  showSection('#postsSection');
});

// 추가적인 링크들도 동일한 방식으로 설정

