<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300&amp;display=swap'>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <link rel="stylesheet" href="../static/css/user.css">

    <title>비밀번호 찾기</title>

    <script>
        function findPassword() {
            let userid = document.forms["form-find-password"].userid.value;
            let email = document.forms["form-find-password"].email.value;
            if (!userid || !email) {
                alert("아이디와 이메일을 모두 입력해주세요.");
                return;
            }
    
            axios({
                method: "post",
                url: "/findPassword",
                data: { userid: userid, email: email }
            }).then((res) => {
                if (res.data.success) {
                    alert("비밀번호를 재설정 하는 페이지로 이동하겠습니다.");
                    localStorage.setItem('userid', userid); // userid 저장
                    window.location.href = "/changePassword";
                } else {
                    alert("아이디 또는 이메일이 유효하지 않습니다.");
                }
            });
        }    
    </script>
</head>
<body>
    <div class="flex">
        <div class="login-box flex">
            <form name="form-find-password">
                <div><input type="text" class="login-input" placeholder="아이디" name="userid" required></div>
                <input type="text" class="login-input" placeholder="이메일" name="email" required>
                <br />
                <button class="login-button" type="button" onclick="findPassword();"><span>비밀번호 찾기</span></button>
            </form>
        </div>
    </div>
</body>
</html>
